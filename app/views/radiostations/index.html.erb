<p id="notice"><%= notice %></p>

<h1>Radiostations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Streaming url</th>
      <th>Json url</th>
      <th>Description</th>
      <th>Active</th>
      <th>Online</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @radiostations.each do |radiostation| %>
      <tr>
        <td class="logo-radio"><%= image_tag radiostation.logo.url %></td>
        <td><%= radiostation.name %></td>
        <td><%= radiostation.streaming_url %></td>
        <td><%= radiostation.json_url %></td>
        <td><%= radiostation.description %></td>
        <td><%= radiostation.active %></td>
        <td><%= radiostation.online %></td>
        <td>
          <a href="<%= url_for radiostation_path(radiostation) %>">
            <i class="fa fa-eye" aria-hidden="true"></i>
          </a>
        </td>
        <td>
          <a href="<%= url_for edit_radiostation_path(radiostation) %>">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          </a>
        </td>
        <td>
          <%= link_to 'Destroy', radiostation, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Radiostation', new_radiostation_path, class: "btn btn-success" %>
